generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "mysql"
    url = env("DATABASE_URL")
    relationMode = "prisma"
}

model Works {
    id          String    @id @default(uuid())
    title       String
    uploadDate  String  
    Link        String    @default("/")
    category    String
    desc        String
    thumbnail   String
    content     String

    @@index([id])
}

model Posts {
    id          String    @id @default(uuid())
    title       String
    date        String
    emoji       String
    thumbnail   String
    hashtags    String    @default("")
    content     String

    @@fulltext([title, hashtags, content])
}
model User {
    id          String    @id @default(uuid())
    email       String    @unique
    password    String
}

model Key {
    id          String    @id @default(uuid())
    used        Boolean   @default(false)
}